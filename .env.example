# KBO Portal Access
KBO_USERNAME=your_username
KBO_PASSWORD=your_password

# Motherduck Connection (setup required)
MOTHERDUCK_TOKEN=your_token_here
MOTHERDUCK_DATABASE=kbo

# Authentication (Clerk)
# For development: Use test keys (sk_test_... and pk_test_...)
# For production: Use live keys (sk_live_... and pk_live_...)
CLERK_SECRET_KEY=sk_test_...
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...

# Cron Security (generate with: openssl rand -hex 32)
CRON_SECRET=generated_secret_here

# Restate Durable Execution Engine
# Local development: Run `restate-server` and use localhost
# Production: Use Restate Cloud (https://cloud.restate.dev)
RESTATE_INGRESS_URL=http://localhost:8080
RESTATE_ADMIN_URL=http://localhost:9070
# Request signature validation (production only - get from Restate Cloud dashboard)
# RESTATE_SIGNING_PUBLIC_KEY=publickeyv1_...

# Vercel Blob Storage (for KBO import files)
# Get from Vercel dashboard → Project → Storage → Blob
NEWAGEKBOBLOB_READ_WRITE_TOKEN=vercel_blob_rw_...

# Environment
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
